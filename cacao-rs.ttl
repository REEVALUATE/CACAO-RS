@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix cc: <http://creativecommons.org/ns#>
@base <http://w3id.org/cacao/vocab/license/> .

<cc0-1.0>
    rdf:type odrl:Policy ;
    rdfs:label "Creative Commons CC0 1.0 Universal Public Domain Dedication"@en ;
    rdfs:seeAlso <https://creativecommons.org/publicdomain/zero/1.0/> ;
    dct:description "A public domain dedication where the creator waives all copyright and related rights worldwide, allowing copying, modification, distribution, performance, and commercial use without conditions."@en ;
    # Grants permission for all uses under CC0 terms.
    odrl:permission [
        rdf:type odrl:Permission ;
        odrl:action odrl:use ;
        rdfs:comment "Grants permission for all uses permitted by copyright and related rights laws, effectively waiving those rights under the terms of CC0 1.0 Universal."@en
    ] .

<pdm>
    rdf:type odrl:Policy ;
    rdfs:label "Public Domain Mark 1.0"@en ;
    rdfs:seeAlso <https://creativecommons.org/publicdomain/mark/1.0/> ;
    dct:description "Indicates that a work is identified as being free of known copyright restrictions worldwide and therefore in the public domain"@en ;
    rdfs:comment "This ODRL Policy represents the Public Domain Mark 1.0. It includes an explicit permission for odrl:use to reflect the unrestricted usability of works correctly marked as being in the public domain worldwide."@en ;

    # Explicitly state permission for 'use' to reflect the consequence
    # of the work being in the public domain, as indicated by PDM.
    odrl:permission [
        rdf:type odrl:Permission ;
        odrl:action odrl:use ;
        rdfs:comment "Reflects the permission to use the work freely, which results from the work being identified by PDM as free of known copyright restrictions."@en
    ] .

<cc-by-4.0>
    rdf:type odrl:Policy ;
    rdfs:label "Creative Commons Attribution 4.0 International"@en ;
    dct:title "CC BY 4.0"@en ;
    rdfs:seeAlso <https://creativecommons.org/licenses/by/4.0/> ;
    dct:description "This license lets others distribute, remix, adapt, and build upon your work, even commercially, as long as they credit you for the original creation..."@en ;

    # Add the Permission rule to the Policy
    odrl:permission [
        rdf:type odrl:Permission ;
        dct:description "You are free to: Share — copy and redistribute the material... Adapt — remix, transform, and build upon the material..."@en ;
        odrl:action odrl:reproduce ;
        odrl:action odrl:distribute ;
        odrl:action odrl:modify ;
        odrl:action odrl:derive ;
        odrl:action odrl:commercialUse ;
    ] ;

    odrl:obligation [
        a odrl:Duty ;
        dct:description "Attribution — You must give appropriate credit, provide a link to the license, and indicate if changes were made. You may do so in any reasonable manner, but not in any way that suggests the licensor endorses you or your use."@en ;
        odrl:action odrl:attribution .
    ] .


